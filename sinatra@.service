[Unit]
Description=sinatra
After=docker.service

[Service]
TimeoutStartSec=0
EnvironmentFile=/etc/environment
ExecStartPre=-/usr/bin/docker kill sinatra-%i
ExecStartPre=-/usr/bin/docker rm sinatra-%i
ExecStartPre=/usr/bin/docker pull rranshous/sinatra
ExecStart=/usr/bin/docker run --name sinatra-%i --rm -p %i:5000 -e PORT=5000 rranshous/sinatra
ExecStop=/usr/bin/docker kill sinatra-%i

[X-Fleet]
X-Conflicts=sinatra@%i.service
